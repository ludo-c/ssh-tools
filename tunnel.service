# systemd startup script

[Unit]
Description=Create a tunnel at startup
After=sys-subsystem-net-devices-wlan0.device network.target

[Service]
ExecStart=/home/ludo/bin/tunnel.sh start
ExecStop=/home/ludo/bin/tunnel.sh stop
Type=forking
PIDFile=/tmp/tunnel.sh.pid
Environment="HOME=/home/ludo"
Restart=always
RestartSec=30sec

[Install]
WantedBy=default.target
